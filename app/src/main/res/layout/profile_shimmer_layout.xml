<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/darkRed"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageEditShimmer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@color/shimmerColor" />

        <TextView
            android:id="@+id/nameTextViewShimmer"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_toEndOf="@+id/imageEditShimmer"
            android:background="@color/shimmerColor"
            android:text=""
            android:textSize="24sp" />


        <TextView
            android:id="@+id/numberTextViewShimmer"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextViewShimmer"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_toRightOf="@id/imageEditShimmer"
            android:background="@color/shimmerColor"
            android:text=""
            android:textSize="24sp" />

        <TextView
            android:id="@+id/emailTextViewShimmer"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/numberTextViewShimmer"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_toEndOf="@+id/imageEditShimmer"
            android:background="@color/shimmerColor"
            android:text=""
            android:textSize="24sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>